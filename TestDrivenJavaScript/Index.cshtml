@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My ASP.NET Application</title>
    
    <link rel='stylesheet' id='h5-font-css' href='_Shared/Styles/bootstrap-theme.css' type='text/css' />
    <link rel='stylesheet' id='h5-font-css' href='_Shared/Styles/bootstrap.css' type='text/css' />
    <link rel='stylesheet' id='h5-font-css' href='_Shared/Styles/main.css' type='text/css' />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand" data-bind="click: select(browseViewModel)">Browse</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#" class="navbar-brand" data-bind="click: select(aboutViewModel)">About</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!-- ko if: selectedView() == browseViewModel -->
            <!-- ko with: browseViewModel -->
                @Html.Partial("Browse/Views/Main")
            <!-- /ko -->
        <!-- /ko -->
        <!-- ko if: selectedView() == aboutViewModel -->
            <!-- ko with: aboutViewModel -->
                @Html.Partial("About/Views/Main")
            <!-- /ko -->
        <!-- /ko -->
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript" src="_External/knockout-3.1.0.js"></script>
    <script type="text/javascript" src="_External/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="_External/bootstrap.min.js"></script>
    
    <script src="~/Browse/Js/Services/ServerApi.js"></script>
    <script src="~/Browse/Js/ViewModels/List/ToDoItem.js"></script>
    <script src="~/Browse/Js/ViewModels/List/ToDoList.js"></script>
    <script src="~/Browse/Js/ViewModels/Create/ToDoCreate.js"></script>
    <script src="~/Browse/Js/ViewModels/Main.js"></script>
    <script src="~/About/Js/ViewModels/Main.js"></script>
    <script src="~/_Shared/Js/Main.js"></script>

    <script type="text/javascript">
        ko.applyBindings(new Shared.MainViewModel());
    </script>
</body>
</html>
